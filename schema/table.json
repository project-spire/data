{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "array",
    "items": {
        "$ref": "#/$defs/table"
    },
    "minItems": 1,
    "$defs": {
        "scalar": { "enum": [
            "id",
            "bool",
            "int8",
            "int16",
            "int32",
            "int64",
            "uint8",
            "uint16",
            "uint32",
            "uint64",
            "float32",
            "float64",
            "str",
            "datetime",
            "duration"
        ] },
        "constraint": {
            "type": "object"
        },
        "field": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "desc": { "type": "string" },
                "target": { "enum": ["client", "server", "all"] },
                "optional": { "type": "boolean" },
                "cardinality": { "enum": ["single", "multi"] },
                "constraints": { "type": "array", "items": { "$ref": "#/$defs/constraint" } }
            },
            "oneOf": [
                {
                    "properties": {
                        "kind": { "const": "scalar" },
                        "type": { "$ref": "#/$defs/scalar" }
                    },
                    "required": ["kind", "type"]
                },
                {
                    "properties": {
                        "kind": { "const": "enum" },
                        "type": { "type": "string" }
                    },
                    "required": ["kind", "type"]
                },
                {
                    "properties": {
                        "kind": { "const": "link" },
                        "type": { "type": "string" }
                    },
                    "required": ["kind", "type"]
                }
            ],
            "required": ["name", "kind", "type", "target"],
            "additionalProperties": false
        },
        "index": {
            "type": "object"
        },
        "table": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "kind": { "enum": ["concrete", "abstract"] },
                "sheet": { "type": "string" },
                "extend": { "type": "string" },
                "fields": { "type": "array", "items": { "$ref": "#/$defs/field" } },
                "indices": { "type": "array", "$ref": "#/$defs/index" }
            },
            "required": ["name", "kind", "sheet", "fields"],
            "additionalProperties": false
        }
    }
}