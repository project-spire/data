{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "name": { "type": "string" },
        "kind": { "enum": ["concrete", "abstract"] },
        "workbook": { "type": "string" },
        "sheet": { "type": "string" },
        "extend": { "type": "string" },
        "fields": { "type": "array", "items": { "$ref": "#/$defs/field" } },
        "indices": { "type": "array", "items": { "$ref": "#/$defs/index" } }
    },
    "required": ["name", "kind", "fields"],
    "additionalProperties": false,
    "$defs": {
        "constraint": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["unique"]
                },
                {
                    "type": "object",
                    "properties": {
                        "max": { "type": ["number", "string"] }
                    },
                    "required": ["max"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "min": { "type": ["number", "string"] }
                    },
                    "required": ["min"],
                    "additionalProperties": false
                }
            ]
        },
        "field": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "desc": { "type": "string" },
                "target": { "enum": ["client", "server", "all", "none"] },
                "optional": { "type": "boolean" },
                "multi": { "type": "boolean" },
                "constraints": { "type": "array", "items": { "$ref": "#/$defs/constraint" } }
            },
            "oneOf": [
                {
                    "properties": {
                        "kind": { "const": "scalar" },
                        "type": { "$ref": "scalar.json/#/$defs/scalar" }
                    },
                    "required": ["kind", "type"]
                },
                {
                    "properties": {
                        "kind": { "const": "enum" },
                        "type": { "type": "string" }
                    },
                    "required": ["kind", "type"]
                },
                {
                    "properties": {
                        "kind": { "const": "link" },
                        "type": { "type": "string" }
                    },
                    "required": ["kind", "type"]
                }
            ],
            "required": ["name", "kind", "type", "target"],
            "additionalProperties": false
        },
        "index": {
            "type": "object",
            "properties": {
                "index": { "type": "string" }
            },
            "required": ["index"],
            "additionalProperties": false
        }
    }
}
